<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/llListItemLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="72dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingEnd="@dimen/padding_layout_generic"
              android:paddingLeft="@dimen/padding_layout_generic"
              android:paddingRight="@dimen/padding_layout_generic"
              android:paddingStart="@dimen/padding_layout_generic"
    >

    <TextView
        android:id="@+id/stock_symbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        tools:text="GOOG"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        >

        <TextView
            android:id="@+id/bid_price"
            style="@style/BidPriceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_bid_price_generic"
            android:paddingLeft="@dimen/padding_bid_price_generic"
            android:paddingRight="@dimen/padding_bid_price_generic"
            android:paddingStart="@dimen/padding_bid_price_generic"
            tools:text="1000.00"
            />

        <TextView
            android:id="@+id/change"
            style="@style/PercentChangeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/percent_change_pill"
            android:paddingEnd="@dimen/padding_change_generic"
            android:paddingLeft="@dimen/padding_change_generic"
            android:paddingRight="@dimen/padding_change_generic"
            android:paddingStart="@dimen/padding_change_generic"
            tools:text="100%"
            />
    </LinearLayout>
</LinearLayout>